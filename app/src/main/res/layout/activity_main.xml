<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:fillViewport="true"
    tools:context="com.alexsheiko.party.ui.MainActivity"
    tools:ignore="MissingPrefix">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="18dp"
                android:elevation="1dp"
                card_view:cardCornerRadius="0dp">

                <android.support.percent.PercentFrameLayout
                    android:id="@+id/canvas"
                    android:layout_width="200dp"
                    android:layout_height="141dp">

                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?selectableItemBackground"
                        android:transitionName="image"
                        tools:src="@drawable/wedding_template_7"/>

                    <TextView
                        android:id="@+id/titleView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="16dp"
                        android:text="Join us"
                        android:textSize="18sp"
                        app:layout_marginTopPercent="25%"/>

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center_horizontal"
                        android:lineSpacingMultiplier="0.8"
                        android:textSize="8sp"
                        app:layout_marginTopPercent="47%"
                        tools:text="@string/details_default"/>

                </android.support.percent.PercentFrameLayout>

            </android.support.v7.widget.CardView>

            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="3dp"
                android:layout_marginTop="18dp"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <android.support.design.widget.FloatingActionButton
                    android:id="@+id/shareButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:src="@drawable/ic_send_white_24dp"
                    app:useCompatPadding="true"/>

                <TextView
                    android:id="@+id/shareHint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-16dp"
                    android:alpha="0.3"
                    android:text="+AD  "
                    android:visibility="gone"
                    tools:visibility="visible"/>

            </LinearLayout>

        </LinearLayout>

        <EditText
            android:id="@+id/inputTitle"
            style="@style/EditText"
            android:background="@null"
            android:inputType="textCapWords"
            android:paddingBottom="0dp"
            android:paddingTop="0dp"
            android:textStyle="bold"
            tools:text="@string/title_default"/>

        <EditText
            android:id="@+id/inputText"
            style="@style/EditText"
            android:background="@null"
            android:inputType="textPostalAddress|textCapWords|textMultiLine"
            android:lineSpacingMultiplier="0.9"
            android:paddingBottom="16dp"
            android:paddingTop="0dp"
            tools:text="@string/details_default"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <com.google.android.gms.ads.AdView
            android:id="@+id/adView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="32dp"
            android:visibility="gone"
            ads:adSize="MEDIUM_RECTANGLE"
            ads:adUnitId="@string/banner_ad_unit_id"
            tools:visibility="visible"/>

    </LinearLayout>

</ScrollView>