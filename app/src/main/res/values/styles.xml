<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorWindowBackground</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
        <item name="actionBarStyle">@style/ActionBarNoShadow</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:colorEdgeEffect">#838383</item>
        <item name="android:windowContentTransitions">true</item>
    </style>

    <style name="AppTheme.Main" parent="AppTheme">
        <item name="android:windowBackground">@drawable/background_window</item>
        <item name="colorPrimary">@color/colorWindowBackground</item>
        <item name="actionBarStyle">@style/MyActionBar</item>
    </style>

    <style name="MyActionBar" parent="@style/Widget.AppCompat.ActionBar.Solid">
        <item name="titleTextStyle">@style/MyTitleTextStyle</item>
        <item name="android:elevation">0dp</item>
    </style>

    <style name="MyTitleTextStyle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ActionBarNoShadow" parent="Widget.AppCompat.Light.ActionBar">
        <item name="elevation">0dp</item>
    </style>

    <style name="GridRow">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">140dp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="GridCell">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:clickable">true</item>
        <item name="android:onClick">onClickCategory</item>
        <item name="android:background">?selectableItemBackgroundBorderless</item>
    </style>

    <style name="GridLabel">
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="AdobeImageBaseTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="windowActionModeOverlay">true</item>
        <item name="colorPrimary">@color/editor_image_background</item>
        <item name="colorPrimaryDark">@color/editor_image_background</item>
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/com_adobe_image_color_blue</item>
        <item name="com_adobe_font_bold">adobe/image/fonts/Roboto-Bold.ttf</item>
        <item name="com_adobe_font_regular">adobe/image/fonts/Roboto-Regular.ttf</item>
        <item name="com_adobe_font_light">adobe/image/fonts/Roboto-Light.ttf</item>
        <item name="toolbarStyle">@style/AdobeImageWidget.ToolBar</item>
        <item name="toolbarNavigationButtonStyle">
            @style/AdobeImageWidget.Toolbar.Button.Navigation
        </item>
        <item name="actionOverflowButtonStyle">@style/AdobeImageWidget.ActionButton.Overflow</item>
        <item name="actionModeStyle">@style/AdobeImageWidget.ActionMode</item>
        <item name="actionModeCloseButtonStyle">@style/AdobeImageWidget.ActionButton.CloseMode
        </item>
        <item name="com_adobe_image_textColorBlue">@color/com_adobe_image_text_color_blue</item>
        <item name="com_adobe_image_colorPrimaryDark2">@color/editor_image_background</item>
        <item name="com_adobe_image_colorAccentDisabled">
            @color/com_adobe_image_color_blue_disabled
        </item>
        <item name="com_adobe_image_flatTransparentBackgroundSelector">
            @drawable/com_adobe_image_flat_button_blue_transparent_selector
        </item>
        <item name="com_adobe_image_listSelectorDark">
            @drawable/com_adobe_image_item_background_dark
        </item>
        <item name="com_adobe_image_cardBackground">
            @drawable/com_adobe_image_card_background_light_selector
        </item>
        <item name="com_adobe_image_buyButtonStyle">@style/AdobeImageWidget.BuyButton.Light</item>
        <item name="com_adobe_image_buyButtonTransparentStyle">
            @style/AdobeImageWidget.BuyButton.Transparent
        </item>
        <item name="com_adobe_image_colorControlHighLightDark">
            @color/com_adobe_image_color_light_gray7
        </item>
        <item name="com_adobe_image_colorControlHighLight">
            @color/com_adobe_image_color_light_gray1
        </item>
        <item name="com_adobe_image_colorControlNormal">@color/editor_control</item>
        <item name="com_adobe_image_contentControlNormal">
            @color/com_adobe_image_color_light_gray_semi_transparent2
        </item>
        <item name="com_adobe_image_storePreviewTextColor">?android:attr/textColorPrimaryInverse
        </item>
        <item name="com_adobe_image_textColorPrimaryDark">@android:color/white</item>
        <item name="com_adobe_image_textColorPrimaryLight">?android:attr/textColorPrimary</item>
        <item name="com_adobe_image_toolbar_progress_size">
            @dimen/com_adobe_image_action_bar_progress_height
        </item>
        <item name="actionBarSize">@dimen/com_adobe_image_action_bar_default_height</item>
    </style>

</resources>
